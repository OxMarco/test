<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pinboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bckg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/m16"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m52"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/m32"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_calc"
            app:tint="@color/primary" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold"
            tools:text="1.00" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="@dimen/m44"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_settings"
            app:tint="@color/primary" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/add_description"
        android:textColor="@color/small_txt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m52"
        android:layout_marginTop="@dimen/m16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="1"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="2"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="3"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m52"
        android:layout_marginTop="@dimen/m16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="4"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="5"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="6"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m52"
        android:layout_marginTop="@dimen/m16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="7"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="8"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="9"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m52"
        android:layout_marginTop="@dimen/m16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="00"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="x"
            android:textSize="40sp"
            app:fontFamily="@font/poppins_semi_bold" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/charge_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/m8"
        android:background="@drawable/shape_primary_btn"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/charge"
        android:textColor="@color/bckg"
        android:textSize="18sp" />
</LinearLayout>